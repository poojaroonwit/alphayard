# Bondarys Application Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase Project URL (from your Supabase dashboard)
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Backend uses this server-side variable name
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (from your Supabase dashboard)
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for admin operations - keep secure)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Supabase Database Password (for local development)
SUPABASE_DB_PASSWORD=your_secure_password_here

# Supabase JWT Secret (for local development)
SUPABASE_JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name and Version
EXPO_PUBLIC_APP_NAME=Bondarys
EXPO_PUBLIC_APP_VERSION=1.0.0

# Public API base URL for the mobile app
EXPO_PUBLIC_API_URL=http://localhost:3000

# React Native Development
REACT_NATIVE_PACKAGER_HOSTNAME=localhost

# Backend server settings
PORT=3000
HOST=0.0.0.0
FRONTEND_URL=http://localhost:3001

# JWT secret used by backend auth middleware
JWT_SECRET=bondarys-dev-secret-key

# =============================================================================
# SOCIAL AUTHENTICATION (Optional)
# =============================================================================

# Google OAuth
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Facebook OAuth
EXPO_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Apple OAuth (iOS only)
EXPO_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id_here

# =============================================================================
# PUSH NOTIFICATIONS (Optional)
# =============================================================================

# Expo Push Notifications
EXPO_PUBLIC_PUSH_NOTIFICATION_KEY=your_expo_push_key_here

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Analytics
EXPO_PUBLIC_ANALYTICS_KEY=your_analytics_key_here

# Error Reporting
EXPO_PUBLIC_ERROR_REPORTING_KEY=your_error_reporting_key_here

# =============================================================================
# AWS CONFIGURATION (Optional - for backups)
# =============================================================================

# AWS S3 for backups
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-backup-bucket-name

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana Admin Password
GRAFANA_PASSWORD=admin

# =============================================================================
# SSL CERTIFICATES (Production)
# =============================================================================

# Let's Encrypt
CERTBOT_EMAIL=your-email@example.com
DOMAIN_NAME=your-domain.com

# =============================================================================
# NOTIFICATIONS (Optional)
# =============================================================================

# Slack Webhook for backup notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# APP CONFIGURATION (Dynamic Content)
# =============================================================================

# App Configuration URL (for fetching dynamic app settings)
EXPO_PUBLIC_APP_CONFIG_URL=http://localhost:3000/api/app-config

# =============================================================================
# DIRECTUS CMS CONFIGURATION
# =============================================================================

# Directus Admin Panel URL
DIRECTUS_PUBLIC_URL=http://localhost:10008

# Directus Admin Account
DIRECTUS_ADMIN_EMAIL=admin@bondarys.com
DIRECTUS_ADMIN_PASSWORD=BondarysCMS2024!

# Directus Email Configuration (for user invitations)
DIRECTUS_EMAIL_FROM=noreply@bondarys.com
DIRECTUS_EMAIL_TRANSPORT=sendmail

# Directus API Access (for programmatic access)
DIRECTUS_API_URL=http://localhost:10008
DIRECTUS_ADMIN_TOKEN=your_admin_token_here_after_setup

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Node Environment
NODE_ENV=development

# =============================================================================
# DEPRECATED - REMOVED SERVICES
# =============================================================================

# The following services have been removed and replaced with Supabase:
# - MongoDB (replaced by Supabase PostgreSQL)
# - Custom Backend API (replaced by Supabase API)
# - Custom Authentication (replaced by Supabase Auth)
# - Custom File Storage (replaced by Supabase Storage)

